@model Aplakhtiy.TestForm.Models.User

@using Aplakhtiy.TestForm.Helpers

@using System.Web.Mvc

@{
	ViewBag.Title = "Create";
	Layout = "~/Views/Users/_Layout.cshtml";
}

<h2>Создание пользователя</h2>

@using (Html.BeginForm())
{
	@Html.AntiForgeryToken()

	<div class="form-horizontal">
		<h4>Пользователь:</h4>
		<hr />
		@Html.ValidationSummary(true, "", new { @class = "text-danger" })
		<div class="form-group col-xs-6">
			@Html.LabelFor(model => model.Surname)
			@Html.EditorFor(model => model.Surname, new { htmlAttributes = new { @class = "form-control" } })
			@Html.ValidationMessageFor(model => model.Surname, "", new { @class = "text-danger" })
		</div>

		<div class="form-group col-xs-6">
			@Html.LabelFor(model => model.Name)
			@Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
			@Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
		</div>

		<div class="form-group col-xs-6">
			@Html.LabelFor(model => model.Patronymic)
			@Html.EditorFor(model => model.Patronymic, new { htmlAttributes = new { @class = "form-control" } })
			@Html.ValidationMessageFor(model => model.Patronymic, "", new { @class = "text-danger" })
		</div>

		<div class="form-group col-xs-6">
			@Html.LabelFor(model => model.PhoneNumber)

			@Html.PhoneEditorFor(model => model.PhoneNumber)
			@*@Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })*@

			@Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
		</div>

		<div class="form-group col-xs-6">
			@Html.LabelFor(model => model.Employed)
			<div class="checkbox">
				@Html.EditorFor(model => model.Employed)
				@Html.ValidationMessageFor(model => model.Employed, "", new { @class = "text-danger" })
			</div>
		</div>

		<div class="form-group col-xs-6">
			@Html.LabelFor(model => model.OrganizationName)
			@Html.EditorFor(model => model.OrganizationName, new { htmlAttributes = new { @class = "form-control" } })
			@Html.ValidationMessageFor(model => model.OrganizationName, "", new { @class = "text-danger" })
		</div>

		<div class="form-group col-xs-6">
			@Html.LabelFor(model => model.StartOnUtc)
			@Html.EditorFor(model => model.StartOnUtc, new { htmlAttributes = new { @class = "form-control" } })
			@Html.ValidationMessageFor(model => model.StartOnUtc, "", new { @class = "text-danger" })
		</div>

		<div class="form-group col-xs-6">
			<div class="col-md-offset-2 col-md-10">
				<input type="submit" value="Создать" class="btn btn-default" />
			</div>
		</div>
	</div>
}

<div>
	@Html.ActionLink("Вернуться к списку", "Index")
</div>

@section Scripts {
	@Scripts.Render("~/bundles/jqueryval")
}
